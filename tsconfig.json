{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
